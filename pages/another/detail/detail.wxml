<!--pages/another/detail/detail.wxml-->
<import src="../../../lib/wxParse/wxParse.wxml"/>
<scroll-view
  scroll-y
  enable-back-to-top="true"
  scroll-top="{{scrollTop}}" 
  class="root-wrap"
  style="height: {{viewHeight}}"
>
  <view class="wrapper">
    <!-- 页面头部 -->
    <view class="info">
      <view class="info-title">{{ title }}</view>
      <view class="info-desc cf">
        <text class="info-desc-author fl">{{ detailData.author }}</text>
        <text class="info-desc-date fr">{{ date }}</text>
      </view>
      <view class="info-line under-line"></view>
    </view>
    <!-- 正文 -->
    <view class="content">
      <image src="{{datailImage}}" mode="{{aspectFit}}" style="width: 100%;"></image>
      <template is="wxParse" data="{{wxParseData:article.nodes}}"/>
    </view>
    <!-- 页面尾部 -->
    <view class="footbar">
      <form>
        <button class="footbar-back clearBtnDefault" bindtap="back">
          <view class="icon footbar-back-icon"></view>
        </button>
        <button class="footbar-btn clearBtnDefault" bindtap="next">下一篇</button>
        <button class="footbar-share clearBtnDefault" open-type="share" bindtap="share">
          <view class="icon footbar-share-icon"></view>
        </button>
      </form>
    </view>
  </view>
</scroll-view>
